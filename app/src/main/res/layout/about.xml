<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView2" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TabHost
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tabHost"
                android:layout_gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical">

                    <TabWidget
                        android:id="@android:id/tabs"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/restaurant_primary"></TabWidget>

                    <FrameLayout
                        android:id="@android:id/tabcontent"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">

                        <LinearLayout
                            android:id="@+id/tab1"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="192dp"
                                android:layout_height="192dp"
                                android:id="@+id/imageView2"
                                android:layout_gravity="center"
                                android:src="@drawable/logoappabout"
                                android:layout_marginBottom="20dp"
                                android:layout_marginTop="100dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textStyle="bold"
                                android:textColor="#44330b"
                                android:text="Cari Makan"
                                android:id="@+id/textView2"
                                android:layout_gravity="center_horizontal" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textStyle="bold"
                                android:textColor="#44330b"
                                android:text="Ver"
                                android:id="@+id/versionName"
                                android:layout_gravity="center_horizontal" />



                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Copyright © 2015"
                                android:textColor="#44330b"
                                android:id="@+id/textView4"
                                android:layout_gravity="center_horizontal" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:text="Ersa Rizki Dimitri"
                                android:textColor="#44330b"
                                android:id="@+id/textView5"
                                android:layout_gravity="center_horizontal" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/tab2"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="#44330b"
                                android:text="Libraries"
                                android:id="@+id/textView6"
                                android:phoneNumber="true"
                                android:layout_margin="10dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cari Makan menggunakan libraries eksternal untuk efektifitas dan efisiensi sumber daya :"
                                android:textStyle="bold"
                                android:textSize="15sp"
                                android:textColor="#44330b"
                                android:id="@+id/textView7"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"/>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent">

                                <RelativeLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:padding="10dp"
                                    android:layout_marginLeft="20dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textAppearance="?android:attr/textAppearanceSmall"
                                        android:textColor="#44330b"
                                        android:textSize="15sp"
                                        android:text="Android Volley - Copyright © 2011-2014 The Android Open Source Project, Xiaoke Zhang - Apache 2.0"
                                        android:id="@+id/textView8"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="10dp"
                                        android:layout_toRightOf="@+id/bullet1"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textAppearance="?android:attr/textAppearanceSmall"
                                        android:textColor="#44330b"
                                        android:textSize="15sp"
                                        android:text="android-async-http-1.4.4 - Copyright © 2013 James Smith - Apache 2.0 "
                                        android:id="@+id/textView9"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="10dp"
                                        android:layout_below="@+id/textView8"
                                        android:layout_toRightOf="@+id/bullet2"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textAppearance="?android:attr/textAppearanceSmall"
                                        android:textColor="#44330b"
                                        android:textSize="15sp"
                                        android:text="httpclient-4.3.6 "
                                        android:id="@+id/textView10"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="10dp"
                                        android:layout_below="@+id/textView9"
                                        android:layout_toRightOf="@+id/bullet3"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textAppearance="?android:attr/textAppearanceSmall"
                                        android:textColor="#44330b"
                                        android:textSize="15sp"
                                        android:text="httpcore-4.3.3"
                                        android:id="@+id/textView11"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="10dp"
                                        android:layout_below="@+id/textView10"
                                        android:layout_toRightOf="@+id/bullet4"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textAppearance="?android:attr/textAppearanceSmall"
                                        android:textColor="#44330b"
                                        android:textSize="15sp"
                                        android:text="httpmime-4.3.6"
                                        android:id="@+id/textView12"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="10dp"
                                        android:layout_below="@+id/textView11"
                                        android:layout_toRightOf="@+id/bullet5"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="•"
                                        android:textSize="15sp"
                                        android:id="@+id/bullet1"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="•"
                                        android:textSize="15sp"
                                        android:id="@+id/bullet2"
                                        android:layout_alignTop="@+id/textView9"
                                        android:layout_toLeftOf="@+id/textView8"
                                        android:layout_toStartOf="@+id/textView8" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="•"
                                        android:textSize="15sp"
                                        android:id="@+id/bullet3"
                                        android:layout_above="@+id/bullet4"
                                        android:layout_toLeftOf="@+id/textView9"
                                        android:layout_toStartOf="@+id/textView9" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="•"
                                        android:textSize="15sp"
                                        android:id="@+id/bullet4"
                                        android:layout_above="@+id/bullet5"
                                        android:layout_alignParentLeft="true"
                                        android:layout_alignParentStart="true" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="•"
                                        android:textSize="15sp"
                                        android:id="@+id/bullet5"
                                        android:layout_alignTop="@+id/textView12"
                                        android:layout_toLeftOf="@+id/textView9"
                                        android:layout_toStartOf="@+id/textView9" />

                                </RelativeLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </FrameLayout>
                </LinearLayout>
            </TabHost>
        </LinearLayout>
    </ScrollView>
</LinearLayout>